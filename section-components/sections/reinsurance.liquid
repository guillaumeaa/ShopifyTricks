{%- style -%}
  .footer-reinsurances {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .footer-reinsurances {
      margin-top: {{ section.settings.margin_top }}px;
    }

    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
{%- if section.settings.reinsurances_enable -%}
<div class="footer-reinsurances color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  {{ 'component-reinsurance.css' | asset_url | stylesheet_tag }}
  <div class="page-width">
    <div class="grid grid--2-col grid--4-col-tablet grid--4-col-desktop">
      <div class="reinsurance grid__item">
        {{ settings.icon_reinsurance_1 | img_url: '40x', scale: 2 | img_tag: settings.text_reinsurance_1, 'reinssurance__icon' }}
        <div class="reinsurance__text-content">
          <p>{{ settings.text_reinsurance_1 }}</p>
        </div>
      </div>
      <div class="reinsurance grid__item">
        {{ settings.icon_reinsurance_2 | img_url: '40x', scale: 2 | img_tag: settings.text_reinsurance_2, 'reinssurance__icon' }}
        <div class="reinsurance__text-content">
          <p>{{ settings.text_reinsurance_2 }}</p>
        </div>
      </div>
      <div class="reinsurance grid__item">
        {{ settings.icon_reinsurance_3 | img_url: '40x', scale: 2 | img_tag: settings.text_reinsurance_3, 'reinssurance__icon' }}
        <div class="reinsurance__text-content">
          <p>{{ settings.text_reinsurance_3 }}</p>
        </div>
      </div>
      <div class="reinsurance grid__item">
        {{ settings.icon_reinsurance_4 | img_url: '40x', scale: 2 | img_tag: settings.text_reinsurance_4, 'reinssurance__icon' }}
        <div class="reinsurance__text-content">
          <p>{{ settings.text_reinsurance_4 }}</p>
        </div>
      </div>
    </div>
  </div>
</div>
{%- endif -%}

{% schema %}
{
  "name": "t:sections.reinsurances.name",
  "class": "section-reinsurances",
  "settings": [
    {
      "type": "checkbox",
      "id": "reinsurances_enable",
      "default": true,
      "label": "t:sections.reinsurances.settings.reinsurances_enable.label"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "t:sections.all.colors.accent_1.label"
        },
        {
          "value": "accent-2",
          "label": "t:sections.all.colors.accent_2.label"
        },
        {
          "value": "background-1",
          "label": "t:sections.all.colors.background_1.label"
        },
        {
          "value": "background-2",
          "label": "t:sections.all.colors.background_2.label"
        },
        {
          "value": "inverse",
          "label": "t:sections.all.colors.inverse.label"
        }
      ],
      "default": "background-1",
      "label": "t:sections.all.colors.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.spacing"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.reinsurances.settings.margin_top.label",
      "default": 0
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "t:sections.reinsurances.presets.name"
    }
  ]
}
{% endschema %}
